<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edge.daomy.mapper.DemodeptsDao">

    <resultMap type="com.edge.entity.Demodepts" id="DemodeptsMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="deptname" column="DeptName" jdbcType="VARCHAR"/>
        <result property="deptdesc" column="DeptDesc" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getAll" resultMap="DemodeptsMap">
        select
          ID, DeptName, DeptDesc
        from dbo.DemoDepts
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="DemodeptsMap">
        select
          ID, DeptName, DeptDesc
        from dbo.DemoDepts
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DemodeptsMap">
        select
          ID, DeptName, DeptDesc
        from dbo.DemoDepts
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DemodeptsMap">
        select
          ID, DeptName, DeptDesc
        from dbo.DemoDepts
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="deptname != null and deptname != ''">
                and DeptName = #{deptname}
            </if>
            <if test="deptdesc != null and deptdesc != ''">
                and DeptDesc = #{deptdesc}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into dbo.DemoDepts(DeptName, DeptDesc)
        values (#{deptname}, #{deptdesc})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update dbo.DemoDepts
        <set>
            <if test="deptname != null and deptname != ''">
                DeptName = #{deptname},
            </if>
            <if test="deptdesc != null and deptdesc != ''">
                DeptDesc = #{deptdesc},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from dbo.DemoDepts where ID = #{id}
    </delete>

</mapper>